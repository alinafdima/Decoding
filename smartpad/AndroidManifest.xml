<?xml version="1.0" encoding="UTF-8"?>
<manifest android:versionCode="1" android:versionName="1.0" package="com.appsrox.smartpad"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="8" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.camera.flash" android:required="false" />
    <uses-feature android:name="android.hardware.camera.front" android:required="false" />
    <application android:theme="@style/app_theme" android:label="@string/app_name" android:icon="@drawable/ic_launcher" android:name=".SmartPad">
        <activity android:label="@string/app_name" android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BrowseActivity" />
        <activity android:name=".ManageActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:theme="@android:style/Theme.Dialog" android:name=".AuthActivity" />
        <activity android:name=".note.BasicActivity" android:windowSoftInputMode="stateHidden" />
        <activity android:name=".note.ChecklistActivity" android:windowSoftInputMode="stateHidden" />
        <activity android:name=".note.SnapshotActivity" android:windowSoftInputMode="stateHidden" />
        <activity android:name=".note.PhotoActivity" />
    </application>
</manifest>